<div class="results-block mb-3">
  <%= render "layouts/messages" %>
</div>

<% if @friends %>
  <div class="card card-header results-block">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td>
              <strong>Name: </strong><%= friend.full_name %>
            </td>
            <td>
              <strong>Email: </strong><%= friend.email %>
            </td>
            <td>
              <div class="results-block">
                <strong>Actions:</strong>
                <%= link_to "View Profile", user_path(friend),
                                          class: "btn btn-sm btn-success" %>
              </div>
              <% if current_user.not_friends_with?(friend.id) %>
                <%= link_to "Follow Friend?", friendships_path(friend: friend), class: "btn btn-sm btn-success", method: :post %>
              <% else %>
                <span class="badge badge-secondary">You are friends.</span>
              <% end %>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
